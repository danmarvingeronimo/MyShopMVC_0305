@model MyShopMVC.Models.StoreViewModel

@{
    ViewBag.Title = "Store";
}

<div class="col-lg-3">
   <div class="well">
       <h3 class="text-center">Advanced Search</h3>
       <div class="list-group">
           <a href="Index" class="list-group-item">All Categories</a>
           @foreach (var item in Model.Categories)
           {
               <a href="Index?c=@item.CatID" class="list-group-item">
                   <span class="badge">@item.TotalCount</span>
                   @item.Name
               </a>
           }
       </div>
   </div>
</div>
<div class="col-lg-9">
    <h1 class="text-center">My Store</h1>
    <hr />
    @foreach (var item in Model.Products)
    {
        <div class="col-lg-4">
            <a href="@Url.Action("Details", "Store", new {id = item.ID})">
                <div class="thumbnail">
                    <img src="../Images/Products/@item.Image" class="img-responsive" />
                    <div class="caption">
                        <h3 class="text-center">
                            @item.Name (@item.Code)
                        </h3>
                        <p>
                            Category: @item.Category
                            <h2>Php @item.Price.ToString("#,##0.00")</h2>
                        </p>
                        <hr />
                        <a href="@Url.Action("AddToCart", "Store",  new { id=item.ID })" name="addtocart" class="btn btn-info btn btn-block"
                               value="Add to Cart" > Add To Cart</a>
                    </div>
                </div>
            </a>
        </div>
    }
</div>