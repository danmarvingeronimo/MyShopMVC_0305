@model IEnumerable<MyShopMVC.Models.CartModel>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>
<div class="col-lg-9">
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>


                <td>
                    <a href="@Url.Action("Details", "Store", new { id = item.ProductID})">
                        <img src="../../Images/Products/@item.Image" width="200" />

                    </a>

                </td>
                <td>
                    <a href="@Url.Action("Details", "Store", new { id = item.ProductID})">
                        <strong>
                            @item.Name (@item.Code)
                        </strong>
                    </a>
                    <br />
                    <small>Category: @item.Category</small>
                </td>


                <td>
                    Php @Convert.ToDouble(item.Price).ToString("#,##0.00")
                </td>
                <td>
                    <input type="number" min="1" max="99" class="form-control" value="@item.Quantity" />
                </td>
                <td>
                    Php @Convert.ToDouble(item.Amount).ToString("#,##0.00")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>

</div>
<div class="col-lg-3">
    <div class="well">
        <h3 class="text-center">Order Summary</h3>
        <table class="table">
            <tr>
                <td>Gross Amount:</td>
                <td>@ViewBag.Gross</td>
            </tr>
            <tr>
                <td>Vat (12%)</td>
                <td>@ViewBag.VAT</td>
            </tr>
            <tr>
                <td>Total Amount</td>
                <td>@ViewBag.Total</td>
            </tr>
        </table>
        <hr />
        <a href="@Url.Action("Checkout", "Account")" class="btn btn-lg btn-block btn-success">
            Checkout
        </a>
    </div>
</div>
<div class="row">

</div>

